<UserControl x:Class="GPAS.Graph.GraphViewer.Flow.FlowShape"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GPAS.Graph.GraphViewer.Flow"
             mc:Ignorable="d" 
             d:DesignHeight="50" Width="50">
    <Grid>
        <Path>
            <Path.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="Red" Offset="0"/>
                    <GradientStop Offset="1"/>
                </RadialGradientBrush>
            </Path.Fill>
            <Path.Data>
                <EllipseGeometry Center="0,0" RadiusX="25" RadiusY="25"/>
            </Path.Data>
        </Path>
    </Grid>
</UserControl>
