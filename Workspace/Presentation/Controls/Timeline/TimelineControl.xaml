<controls:PresentationControl x:Class="GPAS.Workspace.Presentation.Controls.Timeline.TimelineControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GPAS.Workspace.Presentation.Controls.Timeline"
             xmlns:controls="clr-namespace:GPAS.Workspace.Presentation.Controls"
             xmlns:timelineVwr="clr-namespace:GPAS.TimelineViewer;assembly=GPAS.TimelineViewer"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="1000">
    <Grid>
        <timelineVwr:TimelineViewer x:Name="timelineViewer" ItemsNeeded="TimelineViewer_ItemsNeeded" CategoriesInShownChanged="TimelineViewer_CategoriesInShownChanged"
                                    SegmentSelectionChanged="timelineViewer_SegmentSelectionChanged" SnapshotTaken="TimelineViewer_SnapshotTaken" 
                                    FilterWindowsChanged="TimelineViewer_FilterWindowsChanged"/>
    </Grid>
</controls:PresentationControl>
