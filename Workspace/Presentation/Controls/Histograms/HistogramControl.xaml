<controls:PresentationControl x:Class="GPAS.Workspace.Presentation.Controls.Histograms.HistogramControl"
                              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                              xmlns:hist="clr-namespace:GPAS.HistogramViewer;assembly=GPAS.HistogramViewer"
                              xmlns:controls="clr-namespace:GPAS.Workspace.Presentation.Controls"
                              mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="250">

    <hist:Histogram x:Name="mainHistogramViewer" Grid.Row="0"
                    SelectionChanged="mainHistogramViewer_SelectionChanged"
                    SnapshotTaken="mainHistogramViewer_SnapshotTaken"/>
</controls:PresentationControl>
