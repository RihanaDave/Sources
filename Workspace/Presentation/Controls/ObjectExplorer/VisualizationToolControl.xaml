                    <Setter.Value>
                        <Grid MinWidth="300" MinHeight="200" MaxHeight="400">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="{Binding Title}" Margin="10" Grid.Row="0" 
                               Foreground="{DynamicResource PrimaryHueMidBrush}" 
